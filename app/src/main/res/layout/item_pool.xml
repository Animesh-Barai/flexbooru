<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              android:background="?attr/selectableItemBackground"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <View
                android:layout_width="@dimen/spacing_medium"
                android:layout_height="wrap_content" />

        <onlymash.flexbooru.widget.CircularImageView
                android:id="@+id/user_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/avatar_account"
                app:civ_border="true"
                app:civ_border_color="@color/grey_10"
                app:civ_border_width="2dp" />

        <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/pool_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:textColor="?android:attr/textColorPrimary"/>

        <View
                android:layout_width="@dimen/spacing_medium"
                android:layout_height="wrap_content" />

        <ImageButton
                android:id="@+id/bt_expand"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/grey_60"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_expand_more_black_24dp" />
        <View
                android:layout_width="@dimen/spacing_medium"
                android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <View
                android:layout_width="@dimen/spacing_medium"
                android:layout_height="0dp" />

        <TextView
                android:text="#"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="?android:attr/textColorSecondary"/>

        <TextView
                android:id="@+id/pool_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="?android:attr/textColorSecondary"/>

        <TextView
                android:text=" - "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="?android:attr/textColorSecondary"/>

        <TextView
                android:id="@+id/post_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="?android:attr/textColorSecondary"/>
        <TextView
                android:id="@+id/date"
                android:gravity="end"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="?android:attr/textColorSecondary"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/expand_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_3"
            android:orientation="vertical"
            android:visibility="gone">

        <TextView
                android:id="@+id/pool_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web|email"
                android:layout_margin="@dimen/spacing_large"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="?android:attr/textColorSecondary" />

    </LinearLayout>

</LinearLayout>