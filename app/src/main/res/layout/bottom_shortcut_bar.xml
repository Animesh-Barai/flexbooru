<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bottom_bar_container"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:minHeight="@dimen/browse_bottom_bar_height">

    <ImageButton
            android:id="@+id/post_share"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/browse_bottom_bar_height"
            android:src="@drawable/ic_share_outline_24dp"
            android:tint="@color/white"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@null"/>

    <ImageButton
            android:id="@+id/post_tags"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/browse_bottom_bar_height"
            android:src="@drawable/ic_bookmark_border_24dp"
            android:tint="@color/white"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@null"/>

    <ImageButton
            android:id="@+id/post_info"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/browse_bottom_bar_height"
            android:src="@drawable/ic_info_outline_24dp"
            android:tint="@color/white"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@null"/>

</LinearLayout>