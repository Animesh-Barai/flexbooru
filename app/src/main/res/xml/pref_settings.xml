<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreference
            android:key="settings_safe_mode"
            android:title="@string/settings_safe_mode"
            android:defaultValue="true"
            android:summaryOn="@string/switch_on"
            android:summaryOff="@string/switch_off"
            app:iconSpaceReserved="true"/>

    <!--suppress AndroidElementNotAllowed -->
    <SimpleMenuPreference
            android:key="settings_page_size"
            android:entries="@array/settings_page_size_entries"
            android:entryValues="@array/settings_page_size_entries_values"
            android:defaultValue="10"
            android:summary="%s"
            android:title="@string/settings_page_size"
            app:iconSpaceReserved="true" />

    <!--suppress AndroidElementNotAllowed -->
    <SimpleMenuPreference
            android:key="settings_browse_size"
            android:entries="@array/settings_browse_size_entries"
            android:entryValues="@array/settings_post_size_entries_values"
            android:defaultValue="sample"
            android:summary="%s"
            android:title="@string/settings_browse_size"
            app:iconSpaceReserved="true" />

    <!--suppress AndroidElementNotAllowed -->
    <SimpleMenuPreference
            android:key="settings_download_size"
            android:entries="@array/settings_download_size_entries"
            android:entryValues="@array/settings_post_size_entries_values"
            android:defaultValue="sample"
            android:summary="%s"
            android:title="@string/settings_download_size"
            app:iconSpaceReserved="true" />

    <!--suppress AndroidElementNotAllowed -->
    <SimpleMenuPreference
            android:key="settings_theme_mode"
            android:entries="@array/settings_theme_mode_entries"
            android:entryValues="@array/settings_theme_mode_entries_values"
            android:defaultValue="system"
            android:summary="%s"
            android:title="@string/settings_theme_mode"
            app:iconSpaceReserved="true" />

    <!--suppress AndroidElementNotAllowed -->
    <SimpleMenuPreference
            android:key="settings_grid_width"
            android:entries="@array/settings_grid_width_entries"
            android:entryValues="@array/settings_grid_width_entries_values"
            android:defaultValue="normal"
            android:summary="%s"
            android:title="@string/settings_grid_width"
            app:iconSpaceReserved="true" />
</PreferenceScreen>
